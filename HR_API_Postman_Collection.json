{
  "info": {
    "name": "HR Application API",
    "description": "Complete API collection for Django HR Application with Multi-tenant Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000/api",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "employer_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "activation_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('admin_token', jsonData.data.tokens.access);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@payrova.com\",\n  \"password\": \"Admin@123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", ""]
            }
          }
        },
        {
          "name": "Employer Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('employer_token', jsonData.data.tokens.access);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"employer@company.com\",\n  \"password\": \"YourPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", ""]
            }
          }
        },
        {
          "name": "Activate Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{activation_token}}\",\n  \"password\": \"NewPassword123!\",\n  \"confirm_password\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/activate/",
              "host": ["{{base_url}}"],
              "path": ["auth", "activate", ""]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"your_refresh_token_here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["auth", "token", "refresh", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Create Employer Account",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data.activation_token) {",
                  "        pm.collectionVariables.set('activation_token', jsonData.data.activation_token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"employer@company.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/create-employer/",
              "host": ["{{base_url}}"],
              "path": ["admin", "create-employer", ""]
            }
          }
        }
      ]
    },
    {
      "name": "2FA",
      "item": [
        {
          "name": "Setup 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employer_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/2fa/setup/",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "setup", ""]
            }
          }
        },
        {
          "name": "Verify and Enable 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employer_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"verification_code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/2fa/verify/",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "verify", ""]
            }
          }
        },
        {
          "name": "Disable 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employer_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"YourPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/2fa/disable/",
              "host": ["{{base_url}}"],
              "path": ["auth", "2fa", "disable", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employer_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/profile/",
              "host": ["{{base_url}}"],
              "path": ["profile", ""]
            }
          }
        },
        {
          "name": "Complete Employer Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employer_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Tech Corporation Ltd\",\n  \"employer_name_or_group\": \"Tech Group\",\n  \"organization_type\": \"PRIVATE\",\n  \"industry_sector\": \"Technology\",\n  \"date_of_incorporation\": \"2020-01-15\",\n  \"company_location\": \"Douala\",\n  \"physical_address\": \"123 Business Street, Akwa, Douala\",\n  \"phone_number\": \"+237699123456\",\n  \"fax_number\": \"+237233123456\",\n  \"official_company_email\": \"contact@techcorp.cm\",\n  \"rccm\": \"RC/DLA/2020/B/12345\",\n  \"taxpayer_identification_number\": \"M012345678901Z\",\n  \"cnps_employer_number\": \"1234567\",\n  \"labour_inspectorate_declaration\": \"DIT/DLA/2020/123\",\n  \"business_license\": \"P2020/12345\",\n  \"bank_name\": \"Afriland First Bank\",\n  \"bank_account_number\": \"10002000300040005\",\n  \"bank_iban_swift\": \"CCBACMCXXXX\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/employer/profile/complete/",
              "host": ["{{base_url}}"],
              "path": ["employer", "profile", "complete", ""]
            }
          }
        },
        {
          "name": "Get Employer Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employer_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/employer/profile/",
              "host": ["{{base_url}}"],
              "path": ["employer", "profile", ""]
            }
          }
        },
        {
          "name": "Update Employer Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employer_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"company_name\": \"Updated Tech Corporation Ltd\",\n  \"phone_number\": \"+237699999999\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/employer/profile/",
              "host": ["{{base_url}}"],
              "path": ["employer", "profile", ""]
            }
          }
        }
      ]
    }
  ]
}
